@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml"; <!-- Ensure correct layout -->
}

<section class="h-100" style="margin-top:20px">
    <div class="container-fluid">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <!-- Left Image -->
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://img.freepik.com/premium-vector/bookstore-building-web-concept-couple-buys-books-bookshop-students-holding-textbooks-standing-entrance-store_198565-298.jpg"
                     class="img-fluid" alt="Sample image">
            </div>
            <!-- Register Form -->
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                    <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                        <p class="lead fw-normal mb-4 me-3">Create a new account</p>
                    </div>

                    <!-- Display error message if any -->
                    if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <!-- Name Input -->
                    <div class="form-outline mb-2">
                        @Html.TextBox("Name", null, new { @class = "form-control form-control-lg", placeholder = "Enter your full name" })
                        <label class="form-label" for="Name">Full Name</label>
                    </div>

                    <!-- Address Input -->
                    <div class="form-outline mb-2">
                        @Html.TextBox("Address", null, new { @class = "form-control form-control-lg", placeholder = "Enter your address" })
                        <label class="form-label" for="Address">Address</label>
                    </div>

                    <!-- Email Input -->
                    <div class="form-outline mb-2">
                        @Html.TextBox("Email", null, new { @class = "form-control form-control-lg", placeholder = "Enter a valid email address" })
                        <label class="form-label" for="Email">Email Address</label>
                    </div>

                    <!-- Phone Number Input -->
                    <div class="form-outline mb-2">
                        @Html.TextBox("Phone", null, new { @class = "form-control form-control-lg", placeholder = "Enter your phone number" })
                        <label class="form-label" for="Phone">Phone Number</label>
                    </div>

                    <!-- Username Input -->
                    <div class="form-outline mb-2">
                        @Html.TextBox("Username", null, new { @class = "form-control form-control-lg", placeholder = "Choose a username" })
                        <label class="form-label" for="Username">Username</label>
                    </div>

                    <!-- Password Input -->
                    <div class="form-outline mb-2">
                        @Html.Password("Password", null, new { @class = "form-control form-control-lg", placeholder = "Create a password" })
                        <label class="form-label" for="Password">Password</label>
                    </div>

                    <div class="text-center text-lg-start mt-3 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Register
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0 mt-3">
                            Already have an account? <a href="@Url.Action("Login", "Account")" class="link-danger">Login</a>
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
