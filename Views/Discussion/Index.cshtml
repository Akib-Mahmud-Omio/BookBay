@model IEnumerable<E_Book_Store_1.Models.Discussion>
@{
    ViewBag.Title = "Discussions";
    var q = ViewBag.Query as string;
    bool isLogged = ViewBag.IsLogged ?? false;
}

<div class="d-flex justify-content-between align-items-center mb-4 sticky-top bg-white p-2 border-bottom shadow-sm">
    <h2 class="mb-0">📚 Book Discussions</h2>
    <div>
        @if (isLogged)
        {
            <a class="btn btn-primary shadow-sm" data-bs-toggle="modal" data-bs-target="#createDiscussionModal">
                <i class="bi bi-chat-dots me-1"></i> Start Discussion
            </a>
        }
        else
        {
            <a class="btn btn-outline-primary" href="@Url.Action("Login","Account")">
                <i class="bi bi-box-arrow-in-right me-1"></i> Login to start
            </a>
        }
    </div>
</div>

<!-- Search -->
<form method="get" class="mb-4">
    <div class="input-group shadow-sm">
        <input type="text" name="q" value="@q" class="form-control" placeholder="🔍 Search discussions or book titles..." />
        <button class="btn btn-outline-secondary" type="submit">Search</button>
    </div>
</form>

<!-- Forum Thread List -->
<div class="list-group">
    @foreach (var d in Model)
    {
        <a href="@Url.Action("Details","Discussion", new { id = d.discussion_id })"
           class="list-group-item list-group-item-action py-3 mb-3 shadow-sm rounded-3" style="background-color: #f3dc2e; ">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1 fw-bold">@d.title</h5>
                <small class="text-muted">@d.created_on.ToString("MMM dd, yyyy HH:mm")</small>
            </div>
            <p class="mb-1 text-secondary small">
                Started by <strong>@((d.CreatedByCustomer != null) ? d.CreatedByCustomer.name : "Anonymous")</strong>
                · Book: <span class="badge bg-info text-dark">@((d.Book != null ? d.Book.title : d.book_name))</span>
            </p>
            <div class="d-flex justify-content-end">
                <span class="badge bg-primary">
                    💬 @(d.DiscussionMessages?.Count() ?? 0) messages
                </span>
            </div>
        </a>
    }
</div>

<!-- Create Discussion Modal -->
<div class="modal fade" id="createDiscussionModal" tabindex="-1" aria-labelledby="createDiscussionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg rounded-4">
            <form method="post" action="@Url.Action("Create","Discussion")">
                @Html.AntiForgeryToken()
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold" id="createDiscussionModalLabel">✨ Start a new discussion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Book name</label>
                        <input name="BookName" class="form-control" placeholder="Type the book name here..." required />
                        <div class="form-text">If it matches an existing book title, the discussion links automatically.</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Discussion title</label>
                        <input name="Title" class="form-control" placeholder="Enter your discussion title..." required />
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>
