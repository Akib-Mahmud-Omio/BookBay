@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .hero-section {
        background: url('https://static.vecteezy.com/system/resources/previews/035/534/835/large_2x/ai-generated-collection-of-books-with-reading-lamp-minimalist-flat-design-on-white-background-free-photo.jpg') no-repeat center center;
        background-size: cover;
        padding: 60px 20px;
        text-align: left;
        margin-bottom: 40px;
    }

    .hero-content {
        max-width: 500px;
    }

        .hero-content h1 {
            color: #333;
            font-size: 2.5rem;
            margin-bottom: 15px;
        }

    .btn-shop {
        background-color: #ff4444;
        color: white;
        padding: 10px 25px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        margin-top: 20px;
    }

    .section-title {
        text-align: center;
        margin: 40px 0 30px;
        font-size: 24px;
        color: #333;
    }

    .book-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 30px;
        padding: 0 20px;
        margin-bottom: 40px;
    }

    .book-card {
        text-align: center;
    }

        .book-card img {
            width: 100%;
            height: 280px;
            object-fit: cover;
            margin-bottom: 10px;
        }

        .book-card h3 {
            font-size: 16px;
            margin: 10px 0;
            color: #333;
        }

        .book-card .price {
            color: #ff4444;
            font-weight: bold;
        }

    .book-festival {
        background: #ffeae5;
        padding: 40px 20px;
        text-align: center;
        margin: 40px 0;
    }

    .author-section {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 30px;
        padding: 20px;
        align-items: center;
    }

    .award-icons {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-top: 15px;
    }

    .news-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 30px;
        padding: 20px;
        margin-bottom: 40px;
    }

    .news-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .news-card h3 {
        margin: 10px 0;
        font-size: 18px;
    }

    .footer-newsletter {
        background: #f5f5f5;
        padding: 40px 20px;
        text-align: center;
        margin-top: 40px;
    }

    .newsletter-input {
        padding: 10px;
        width: 300px;
        margin-right: 10px;
    }

    .btn-subscribe {
        background: #333;
        color: white;
        padding: 10px 20px;
        border: none;
        cursor: pointer;
    }
</style>

<!-- Include SweetAlert2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet" />

<body class="">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-content">
            <h1>Get All Design Books for Your Needs</h1>
            <a href="@Url.Action("Index", "Store")" class="btn-shop">Shop Now</a>
        </div>
    </div>

    <!-- New Arrivals -->
    <h2 class="section-title">NEW ARRIVALS</h2>


    <!-- Book Festival -->
    <div class="book-festival">
        <h2>BOOK FESTIVAL</h2>
        <p>Shop a wide range of collections</p>
        <a href="@Url.Action("Index", "Store")" class="btn-shop">Shop Now</a>
    </div>

    <!-- Best Author -->
    <h2 class="section-title">BEST AUTHOR OF THE WEEK</h2>

    <h2>
        @ViewBag.BestAuthorName
    </h2>
    </div>
    </div>

    <!-- Daily Deals -->
    <h2 class="section-title">DAILY DEALS</h2>


    <!-- Latest News -->
    <h2 class="section-title">YOU'LL ALSO LIKE</h2>


    <!-- Include SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>


@{ var message = TempData["Message"] as string; }

@if (!string.IsNullOrEmpty(message))
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Welcome!',
            text: '@message',
            timer: 1000,  // Automatically closes after 3 seconds
            //timerProgressBar: true,
            showConfirmButton: false
        });
    </script>
}

@{ var logoutmessage = TempData["logoutMessage"] as string; }

@if (!string.IsNullOrEmpty(logoutmessage))
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Log Out',
            text: '@logoutmessage',
            timer: 1000,  // Automatically closes after 3 seconds
            //timerProgressBar: true,
            showConfirmButton: false
        });
    </script>
}