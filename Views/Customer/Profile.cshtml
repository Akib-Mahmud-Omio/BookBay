@model E_Book_Store_1.Models.Customer
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container py-5">
    <!-- Previous code remains the same until the password field -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient text-white" style="background: linear-gradient(45deg, #6b5b95, #45b7d1);">
                    <h2 class="text-center mb-0 py-3 text-black">My Profile</h2>
                </div>
                <div class="card-body" style="background-color: #f8f9fa;">

                    @using (Html.BeginForm("Profile", "Customer", FormMethod.Post, new { @class = "needs-validation" }))
                    {
                        <div class="row g-4">
                            <!-- Previous form fields remain the same -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold" style="color: #6b5b95;">Name</label>
                                    @Html.TextBoxFor(m => m.name, new { @class = "form-control border-0 shadow-sm", id = "name", placeholder = "Enter your name" })
                                    @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold" style="color: #6b5b95;">Email</label>
                                    @Html.TextBoxFor(m => m.email, new { @class = "form-control border-0 shadow-sm", id = "email", placeholder = "Enter your email" })
                                    @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <label class="form-label fw-bold" style="color: #6b5b95;">Address</label>
                                    @Html.TextBoxFor(m => m.address, new { @class = "form-control border-0 shadow-sm", id = "address", placeholder = "Enter your address" })
                                    @Html.ValidationMessageFor(m => m.address, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold" style="color: #6b5b95;">Phone Number</label>
                                    @Html.TextBoxFor(m => m.phone_number, new { @class = "form-control border-0 shadow-sm", id = "phone_number", placeholder = "Enter your phone number" })
                                    @Html.ValidationMessageFor(m => m.phone_number, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold" style="color: #6b5b95;">Username</label>
                                    @Html.TextBoxFor(m => m.username, new { @class = "form-control border-0 shadow-sm", id = "username", placeholder = "Enter your username" })
                                    @Html.ValidationMessageFor(m => m.username, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <!-- Modified password field with eye icon -->
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="form-label fw-bold" style="color: #6b5b95;">Password</label>
                                    <div class="input-group">
                                        @Html.TextBoxFor(m => m.password, new { @class = "form-control border-0 shadow-sm", type = "password", id = "password", placeholder = "Enter your password" })
                                        <button class="btn btn-outline-secondary border-0 shadow-sm" type="button" id="togglePassword">
                                            <i class="bi bi-eye" id="toggleIcon"></i>
                                        </button>
                                    </div>
                                    @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-12 text-center mt-4">
                                <button type="submit" class="btn btn-lg px-5 text-white" style="background: linear-gradient(45deg, #6b5b95, #45b7d1);">
                                    Save Changes
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Bootstrap Icons CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

<style>
    .form-control:focus {
        border-color: #6b5b95;
        box-shadow: 0 0 0 0.25rem rgba(107, 91, 149, 0.25);
    }

    .form-control {
        padding: 0.75rem;
        background-color: white;
        transition: all 0.3s ease;
    }

        .form-control:hover {
            transform: translateY(-2px);
        }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .card-header {
        border-bottom: none;
    }

    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

    #togglePassword {
        cursor: pointer;
        background-color: white;
    }

        #togglePassword:hover {
            background-color: #f8f9fa;
        }

    .input-group .btn {
        z-index: 0;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const togglePassword = document.querySelector('#togglePassword');
        const password = document.querySelector('#password');
        const toggleIcon = document.querySelector('#toggleIcon');

        togglePassword.addEventListener('click', function () {
            // Toggle the type attribute
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);

            // Toggle the icon
            toggleIcon.classList.toggle('bi-eye');
            toggleIcon.classList.toggle('bi-eye-slash');
        });
    });
</script>